{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "checkJs": true,
    "noUncheckedIndexedAccess": true,

    "noEmit": true,
    "incremental": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
